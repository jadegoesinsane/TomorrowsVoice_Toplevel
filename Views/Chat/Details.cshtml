@model TomorrowsVoice_Toplevel.Models.Messaging.Chat

<h2>Chat for Shift @Model.ID</h2>
<div>
	<div class="w-50">
		<div class="ml-3" style="max-height: 250px;overflow-y: scroll;overflow-x: clip;" id="chat"></div>
		<form asp-action="SendMessage" method="post">
			<input type="hidden" name="shiftID" value="@Model.ID" />
			@* <input type="hidden" name="volunteerID" value="20" /> *@
			<div class="row">
				<div class="form-group col-4">
					<label for="content">Message</label>
					<input type="text" class="form-control" id="content" name="content" required />
				</div>
				<div class="form-group col-4">
					<label for="volunteerID">From Volunteer ID:</label>
					<input type="number" class="form-control" id="volunteerID" name="volunteerID" />
				</div>
				<div class="col-4 align-self-end"><button type="submit" class="btn btn-primary mt-2">Send</button></div>
			</div>
		</form>
	</div>
	
</div>
@section Scripts {
	<script type="text/javascript">
		$('#chat').load('/Chat/GetMessages/@Model.ID');
	</script>
}
