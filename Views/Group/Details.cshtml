@model TomorrowsVoice_Toplevel.Models.Users.Group
@{
	ViewData["Title"] = "Details";
}
<div class="d-flex align-items-center">
	<h1 class="me-auto">@Model.Name</h1>
	<a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-sm h-100 btn-outline-success mx-3">
		<i class="bi bi-pencil-square"></i> Edit
	</a>
</div>

<div>
	<hr />
	<dl class="row">
		<div class="col">
			<dt class="text-muted fw-normal m-0">
				@Html.DisplayNameFor(model => model.Name)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Name)
			</dd>
		</div>
		<div class="col">
			<dt class="text-muted fw-normal m-0">
				@Html.DisplayNameFor(model => model.GroupType)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.GroupType)
			</dd>
		</div>
	</dl>
	<dl class="row">
		<div class="col">
			<dt class="text-muted fw-normal m-0">
				@Html.DisplayNameFor(model => model.CreatedOn)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.CreatedOn)
			</dd>
		</div>
		<div class="col">
			<dt class="text-muted fw-normal m-0">
				@Html.DisplayNameFor(model => model.Status)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Status)
			</dd>
		</div>
	</dl>
	<hr />
	<partial name="_VolunteerGroupList" model="@Model.VolunteerGroups" />
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>