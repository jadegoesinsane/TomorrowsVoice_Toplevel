@{
	ViewData["Title"] = "Home Page";
}
<h2>Dashboard</h2>
<div class="card-deck">
	<div class="card text-black bg-green my-3 d-none d-lg-table-cell">
		<div class="card-body row">
			<div class="col-md">
				<h5 class="card-title"><span id="singerCount"></span><br />Singers</h5>
			</div>
			<div id="microphone" class="col-md img-icon"></div>
		</div>
		<div class="card-footer bg-dark-green">
			<a href="Singer" class="btn stretched-link" style="width: 100%">Show Singers</a>
		</div>
	</div>
	<div class="card text-black bg-yellow my-3 d-none d-lg-table-cell">
		<div class="card-body row">
			<div class="col-md">
				<h5 class="card-title"><span id="rehearsalCount"></span><br />Rehearsals</h5>
			</div>
			<div id="note" class="col-md img-icon"></div>
		</div>
		<div class="card-footer bg-dark-yellow">
			<a href="Rehearsal" class="btn stretched-link" style="width: 100%">Show Rehearsals</a>
		</div>
	</div>
	<div class="card text-black bg-blue my-3 d-none d-lg-table-cell">
		<div class="card-body row">
			<div class="col-md">
				<h5 class="card-title"><span id="directorCount"></span><br />Directors</h5>
			</div>
			<div id="speechbubble" class="col-md img-icon"></div>

		</div>
		<div class="card-footer bg-dark-blue">
			<a href="Director" class="btn stretched-link" style="width: 100%">Show Directors</a>
		</div>
	</div>
	<div class="card text-black bg-red my-3 d-none d-lg-table-cell">
		<div class="card-body row">
			<div class="col-md">
				<h5 class="card-title"><span id="chapterCount"></span><br />Chapters</h5>
			</div>
			<div id="trebleclef" class="col-md img-icon"></div>
		</div>
		<div class="card-footer bg-dark-red">
			<a href="Chapter" class="btn stretched-link" style="width: 100%; color: black !important;">Show Chapters</a>
		</div>
	</div>
</div>
<div class="row g-4 my-3">

	<div class="col">
		<div class="form-footer" style="width:50%;">
			<h3>Rehearsals</h3>
		</div>
		<div class="form-area" style="width:50%;">
			<div id='calendar'></div>
		</div>
	</div>
</div>

