                </button>
                @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" id="btnSubmit"  class="btn btn-primary" />
            </div>
