@model TomorrowsVoice_Toplevel.Models.Messaging.Discussion

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Discussion</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Shift)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Shift.ID)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>
	</dl>
	<div class="ml-3" id="DiscussionsPanel" aria-labelledby="Discussions-tab">
		<br />
	</div>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	<script type="text/javascript">
		$('#DiscussionsPanel').load('/Discussion/ListOfMessages/@Model.ID');
	</script>
}