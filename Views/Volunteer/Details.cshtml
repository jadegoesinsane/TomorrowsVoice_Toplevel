@model TomorrowsVoice_Toplevel.Models.Volunteering.Volunteer
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.NameFormatted</h1>
<div>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" role="tabpanel" id="BasicPanel">
            <br />
                <dl class="row">
                    <div class="col-sm-3">
                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </div>
                    <div class="col-sm-9">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>
                        <dd class="col-sm-10">
                            <a href="tel: ">@Html.DisplayFor(model => model.PhoneFormatted)</a>
                        </dd>
                    </div>
                </dl>
                <dl class="row">
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.HoursVolunteered)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.HoursVolunteered)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.ParticipationCount)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ParticipationCount)
                        </dd>
                    </div>
                    <div class="col-sm-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.absences)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.absences)
                        </dd>
                    </div>

                 </dl>
    
        </div>
        <hr/>
    </div>
    <div id="ShiftsPanel"></div>
</div>
 <div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
        <partial name="_BackToList" />
        
</div>

@section Scripts {
    <script type="text/javascript">
        $('#ShiftsPanel').load('/Volunteer/ListOfShiftDetails/@Model.ID');
    </script>
} 