@model TomorrowsVoice_Toplevel.Models.Volunteering.Shift
@{

    Layout = "~/Views/Shared/_EventAdminLayout.cshtml";

}
@{
    ViewData["Title"] = "Sign off";
}

<h1>Sign off</h1>

<h3>Are you sure you want to sign off this shift?</h3>
<div>
    <h4>Shift</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
    </dl>

    


    <form asp-action="SignOffShift">
        <input type="hidden" name="volunteerId" value="@ViewData["volunteerId"]" />
        <input type="hidden" name="shiftId" value="@Model.ID" />
        <input type="submit" value="Confirm" class="btn btn-danger" /> |
        <a href="javascript:history.back()">Back to List</a>
    </form>
   
</div>















