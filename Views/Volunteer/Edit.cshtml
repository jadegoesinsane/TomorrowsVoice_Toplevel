@model TomorrowsVoice_Toplevel.Models.Volunteering.Volunteer
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit @Model.NameFormatted</h1>
<form asp-action="Edit" class="form-container">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	@* <input type="hidden" asp-for="ID" /> *@
	<div class="form-area">
		<div class="row row-cols-3 g-4 mb-3">
			<div class="">
				<div class="form-floating required">
					<input asp-for="FirstName" class="form-control" placeholder="First Name" />
					<label asp-for="FirstName" class="control-label"></label>
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
			</div>
			<div class="">
				<div class="form-floating optional">
					<input asp-for="MiddleName" class="form-control" placeholder="Middle Name (optional)" />
					<label asp-for="MiddleName" class="control-label"></label>
					<span asp-validation-for="MiddleName" class="text-danger"></span>
				</div>
			</div>
			<div class="">
				<div class="form-floating required">
					<input asp-for="LastName" class="form-control" placeholder="Last Name" />
					<label asp-for="LastName" class="control-label"></label>
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
			</div>
			<div class="">
				<div class="form-floating required">
					<input asp-for="Email" readonly class="form-control" placeholder="Email" />
					<label asp-for="Email" class="control-label"></label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="">
				<div class="form-floating required">
					<input asp-for="Phone" class="form-control" placeholder="Emergency Contact Number" />
					<label asp-for="Phone" class="control-label"></label>
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>
			</div>
	</div>
</div>
	<partial name="_FormFooter" />

</form>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
